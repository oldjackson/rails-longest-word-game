<h1>New game</h1>
<div class="scrambler">
  <% @rnd_letters.each do |ltr| %>
  <span class="label label-default"><%= ltr %></span>
  <% end %>
</div>


<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :rnd_letters, @rnd_letters %>
  <div class="form-group">
    <label for="word">What is the longest word you can find?</label>
    <input type="text" name="word" id="word" class="form-control" placeholder="supercalifragilistichespiralidoso">
  </div>

  <input type="submit" value="Play" class="btn btn-primary">
</form>

